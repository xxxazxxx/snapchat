<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/mailbox"
        android:layout_width="32dp"
        android:layout_height="32dp"

        android:layout_alignBottom="@+id/shutter"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="41dp"
        android:layout_toLeftOf="@+id/shutter"
        android:clickable="true"
        android:onClick="mailboxClick"
        android:src="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/shutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shutter" 
        android:clickable="true"/>

    <ImageView
        android:id="@+id/contactlist"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/shutter"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="41dp"
        android:layout_toRightOf="@+id/shutter"
        android:clickable="true"
        android:onClick="contactClick"
        android:src="@drawable/people" />

</RelativeLayout>